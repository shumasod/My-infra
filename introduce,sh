#!/bin/bash

# 色の定義
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# アスキーアートを表示する関数
show_ascii_art() {
    echo -e "${BLUE}"
    echo "          ##   ##  ##   ##  ######    #####    #####   ###  ##"
    echo "          ##   ##  ##   ##   ##  ##  ##   ##  ##   ##   ##  ##"
    echo "  #####   ##   ##  ##   ##   ##  ##  ##   ##  ##   ##   ## ##"
    echo " ##       #######  ##   ##   #####   ##   ##  ##   ##   ####"
    echo "  #####   ##   ##  ##   ##   ##  ##  ##   ##  ##   ##   ## ##"
    echo "      ##  ##   ##  ##   ##   ##  ##  ##   ##  ##   ##   ##  ##"
    echo " ######   ##   ##   #####   ######    #####    #####   ###  ##"
    echo -e "${NC}"
}

# 情報入力を受け付ける関数
get_user_info() {
    echo -e "${GREEN}あなたの情報を入力してください${NC}"
    
    read -p "お名前: " name
    read -p "年齢: " age
    read -p "趣味: " hobby
    read -p "好きな食べ物: " food
}

# 自己紹介を表示する関数
show_introduction() {
    clear
    show_ascii_art
    echo -e "${RED}＊＊＊ 自己紹介 ＊＊＊${NC}"
    echo "━━━━━━━━━━━━━━━━━━━━━━"
    echo -e "名前: ${GREEN}$name${NC}"
    echo -e "年齢: ${GREEN}$age 歳${NC}"
    echo -e "趣味: ${GREEN}$hobby${NC}"
    echo -e "好きな食べ物: ${GREEN}$food${NC}"
    echo "━━━━━━━━━━━━━━━━━━━━━━"
}

# メイン処理
clear
show_ascii_art
get_user_info
show_introduction

echo -e "\n${GREEN}Enterキーを押すと終了します${NC}"
read