#!/bin/bash

# 2025年大阪・関西万博 大屋根リング アスキーアート生成スクリプト

# 色設定
BROWN='\033[0;33m'
BLUE='\033[0;34m'
GREEN='\033[0;32m'
RESET='\033[0m'

# リングのサイズ設定
OUTER_RADIUS=25
INNER_RADIUS=18

clear

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${RESET}"
echo -e "${BLUE}    2025年 大阪・関西万博 大屋根リング${RESET}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${RESET}"
echo ""

# リングを描画
for ((y=-$OUTER_RADIUS; y<=$OUTER_RADIUS; y++)); do
    for ((x=-$OUTER_RADIUS; x<=$OUTER_RADIUS; x++)); do
        # 中心からの距離を計算
        distance=$(echo "sqrt($x*$x + $y*$y)" | bc -l)
        distance=${distance%.*}
        
        if [ $distance -le $OUTER_RADIUS ] && [ $distance -ge $INNER_RADIUS ]; then
            # リング部分（木製の大屋根を表現）
            echo -ne "${BROWN}██${RESET}"
        elif [ $distance -lt $INNER_RADIUS ]; then
            # 内側（空間）
            if [ $distance -eq 0 ]; then
                echo -ne "${GREEN}🏛${RESET}"
            else
                echo -ne "  "
            fi
        else
            # 外側（空間）
            echo -ne "  "
        fi
    done
    echo ""
done

echo ""
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${RESET}"
echo -e "直径: 約615m (世界最大級の木造建築物)"
echo -e "構造: 木製リング構造"
echo -e "テーマ: 「いのち輝く未来社会のデザイン」"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${RESET}"
echo ""

# 詳細版（上から見た図）
echo ""
echo -e "${BLUE}■ 上空からの俯瞰図（詳細版）${RESET}"
echo ""

cat << 'EOF'
                    ╔════════════════════════════╗
                ╔═══╝                            ╚═══╗
            ╔═══╝    ████████████████████████        ╚═══╗
        ╔═══╝      ██                        ██          ╚═══╗
      ╔═╝        ██    万博会場・パビリオン    ██            ╚═╗
    ╔═╝        ██         ┌──────────┐         ██              ╚═╗
   ╔╝        ██           │  中央広場  │           ██               ╚╗
  ╔╝       ██             │    🏛     │             ██              ╚╗
 ╔╝       ██              │ イベント │              ██               ╚╗
╔╝       ██               │   空間   │               ██               ╚╗
║       ██                └──────────┘                ██               ║
║      ██   【大屋根リング - 木製構造】                ██              ║
║     ██    ・全周約2km                                 ██             ║
║    ██     ・幅約30m                                    ██            ║
║    ██     ・高さ約20m                                  ██            ║
║   ██      ・木材使用量: 約24,000㎥                      ██           ║
║   ██                                                    ██           ║
║  ██       [飲食店][休憩所][展示][ショップ]               ██          ║
║  ██                                                      ██          ║
║  ██        ┌─────────────────────┐                   ██          ║
║ ██         │  各国パビリオンエリア   │                    ██         ║
║ ██         │   🇯🇵 🇺🇸 🇫🇷 🇩🇪 🇮🇹   │                    ██         ║
║ ██         └─────────────────────┘                    ██         ║
║ ██                                                        ██         ║
║ ██          [テーマ館][企業展示][体験型施設]              ██         ║
║  ██                                                      ██          ║
║  ██                                                      ██          ║
║   ██                  大阪湾 ⛵                         ██           ║
║   ██                                                    ██           ║
║    ██                                                  ██            ║
║    ██                                                  ██            ║
║     ██                                                ██             ║
║      ██                                              ██              ║
╚╗      ██                                            ██              ╔╝
 ╚╗      ██                                          ██              ╔╝
  ╚╗      ██                                        ██              ╔╝
   ╚╗       ██                                    ██               ╔╝
    ╚═╗       ██                                ██              ╔═╝
      ╚═╗       ██                            ██             ╔═╝
        ╚═══╗     ██████████████████████████             ╔═══╝
            ╚═══╗                                    ╔═══╝
                ╚═══╗╗                          ╔╔═══╝
                    ╚════════════════════════════╝

EOF

echo ""
echo -e "${GREEN}✨ 2025年大阪・関西万博へようこそ！ ✨${RESET}"
echo ""
