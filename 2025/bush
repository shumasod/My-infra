#!/bin/bash

# === カラー設定 ===
if [ -t 1 ] && [ "$(tput colors 2>/dev/null || echo 0)" -ge 8 ]; then
    RED='\033[0;31m'
    YELLOW='\033[1;33m'
    BLUE='\033[0;34m'
    CYAN='\033[0;36m'
    WHITE='\033[1;37m'
    NC='\033[0m'
else
    RED=''
    YELLOW=''
    BLUE=''
    CYAN=''
    WHITE=''
    NC=''
fi

# === ASCIIアートのフレーム ===
frames=(
"${CYAN}
            ／￣￣￣￣￣￣￣￣＼
           /　　${WHITE}刀を抜く……${CYAN}　　  \\
          |　 　┌───┐　　  |
          |　 　｜${WHITE}侍${CYAN}｜　　  |
           \\＿＿＿＿＿＿＿＿／
                 ⌒
        ┏━━━━━━━━┓
        ┃　／￣￣￣＼　┃
        ┃｜ ${WHITE}●   ●${CYAN} ｜┃
        ┃｜   ▼      ｜┃
        ┃　＼＿＿＿／　┃
        ┗━━━━━━━━┛
             ││┌――――┐││
         ┏━━┛┃${YELLOW} 胴当て ${CYAN}┃┗━━┓
         ┃     └――――┘      ┃
         ┃      ／││││＼     ┃
         ┃     │ │ │ │ ││     ┃
         ┃      ＼││││／     ┃
         ┗━━━━━━━━━━━━━━━┛
              ／     ││     ＼
            ／       ││       ＼
          ／         ││         ＼
        ／           ││           ＼
${NC}"
"${CYAN}
            ／￣￣￣￣￣￣￣￣＼
           /　　${WHITE}勝負だ……！${CYAN}　　  \\
          |　 　┌───┐　　  |
          |　 　｜${WHITE}侍${CYAN}｜　　  |
           \\＿＿＿＿＿＿＿＿／
                 ⌒
        ┏━━━━━━━━┓
        ┃　／￣￣￣＼　┃
        ┃｜ ${WHITE}●   ●${CYAN} ｜┃
        ┃｜   ▼      ｜┃
        ┃　＼＿＿＿／　┃
        ┗━━━━━━━━┛
             ││┌――――┐││
         ┏━━┛┃${YELLOW} 胴当て ${CYAN}┃┗━━┓
         ┃     └――――┘      ┃
         ┃      ／││││＼     ┃
         ┃     │ │ │ │ ││     ┃
         ┃      ＼││││／     ┃
         ┗━━━━━━━━━━━━━━━┛
              ／     ││     ＼
            ／   ${RED}===刀閃===${CYAN}    ＼
          ／         ││         ＼
        ／           ││           ＼
${NC}"
)

# === メイン ===
main() {
    clear
    echo -e "${WHITE}⚔️ SAMURAI MODE — 侍、出陣 ⚔️${NC}\n"
    sleep 1

    while true; do
        for frame in "${frames[@]}"; do
            echo -ne "\033[H"  # カーソルを左上に戻す
            echo -e "$frame"
            sleep 0.6
        done
    done
}

main